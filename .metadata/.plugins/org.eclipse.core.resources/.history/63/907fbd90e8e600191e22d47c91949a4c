import java.util.ArrayList;
import java.util.Random;

public class Ladder extends Square {
	
	public Ladder(int position, Game game, int transport) {
		super(position, game);
		this.transport = transport;
	}

	int transport;
	
	ArrayList<Ladder> createLadders(){
		int numberOfLadders;
		ArrayList<Ladder> result = new ArrayList<Ladder>();
		Random rn = new Random();
		ArrayList<Integer> rnList = new ArrayList<Integer>();
		//randomly generated numberOfLadders, +2 --> minimum 1 ladder
		numberOfLadders = (int)((rn.nextInt(game.numberOfSquares())+2)/1.5);
		
		for (int i = 0; i < numberOfLadders; i++){
			int temp = 0;
			// We don't wanna have a random Number in the List as First or Last Square.
			while (temp == 0){
			temp = new Random().nextInt(game.numberOfSquares() - 1);
			}
			rnList.add(temp);
		}
		
		for (int i = 0; i < numberOfLadders; i++){
			rnList.get(i);
			int tempTransport = 0;
			// We don't wanna have a random tansport below 2 or or at Last Square or higher
			while (tempTransport < 2 || tempTransport > game.numberOfSquares()-1){
				//fall back maximum 5 fields
				tempTransport = rnList.get(i)-(new Random().nextInt(5));
			}
			result.add(new Ladder(rnList.get(i), this.game, tempTransport));
		}
		return result;		
	}

}
